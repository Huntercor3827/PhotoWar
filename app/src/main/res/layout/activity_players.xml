<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Players">

    <Button
        android:id="@+id/btTwoPlayers"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:layout_marginBottom="524dp"
        android:background="#F3EEEE"
        android:backgroundTint="#FF5722"
        android:text="2 Players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btThreePlayers"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:backgroundTint="#00BCD4"
        android:text="3 Players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTwoPlayers" />

    <Button
        android:id="@+id/btFourPlayers"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:backgroundTint="#FF9800"
        android:text="4 players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btThreePlayers" />

</androidx.constraintlayout.widget.ConstraintLayout>